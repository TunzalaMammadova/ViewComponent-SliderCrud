@using OneToMany_task.ViewModels.Sliders

@model List<SliderVM>

<div class="container mt-5">
    <div class="create-category">
        <a asp-area="Admin" asp-controller="Slider" asp-action="Create" class="btn btn-success text-white" style="font-size:30px;width:100px;">+</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
             {
                <tr>
                    <td><img src ="~/img/@item.Image" style="width: 100px !important; height: 100px !importan"/></td> 
                    <td>
                        <a class="btn btn-info text-white" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                        <a class="btn btn-warning text-white" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <form class="form-sample d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger text-white">Delete</button>
                        </form>
                    </td>
                </tr>
             }
        </tbody>
    </table>
</div>